---
// src/pages/news/[slug].astro


export async function getStaticPaths() {
  const matches = import.meta.glob('../pages/post/*.md', { eager: true });
  const posts = Object.values(matches);
}


const { slug } = Astro.params;
const post = (await Astro.glob('../content/news/*.md'))
  .find(item => item.file.split('/').pop().replace('.md', '') === slug);

// if (!post) {
//   return Astro.redirect('/404');
// }

const { title, date, category, description, thumbnail, tags } = post.frontmatter;
---

<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col lg:flex-row gap-8">
    <!-- Main Content -->
    <div class="w-full lg:w-3/4">
      <article class="bg-gray-800 rounded-xl p-8">
        <div class="flex justify-between items-center mb-6">
          <h1 class="text-3xl font-bold">{title}</h1>
          <span class="text-gray-400">
            {new Date(date).toLocaleDateString('pl-PL', {
              day: 'numeric',
              month: 'long',
              year: 'numeric'
            })}
          </span>
        </div>

        <div class="flex items-center gap-4 mb-8">
          <span class="bg-purple-500 text-white px-3 py-1 rounded-full">
            {category === 'information' ? 'Informacje' :
             category === 'video' ? 'Video' :
             category === 'music' ? 'Muzyka' :
             'Wywiad'}
          </span>
          <div class="flex gap-2">
            {tags && tags.map(tag => (
              <span class="bg-gray-700 text-gray-300 px-3 py-1 rounded-full text-sm">
                #{tag}
              </span>
            ))}
          </div>
        </div>

        {thumbnail && (
          <img
            src={thumbnail}
            alt={title}
            class="w-full h-96 object-cover rounded-lg mb-8"
          />
        )}

        <div class="prose prose-invert max-w-none">
          <slot />
        </div>

        <div class="mt-12 pt-6 border-t border-gray-700">
          <a
            href="/news/1"
            class="inline-flex items-center text-primary hover:text-purple-400 transition"
          >
            <i class="fas fa-arrow-left mr-2"></i> Powrót do listy aktualności
          </a>
        </div>
      </article>
    </div>

    <!-- Sidebar -->
    <div class="w-full lg:w-1/4">
      <!-- <SidebarEvents /> -->
      <!-- <SidebarPartners /> -->
    </div>
  </div>
</div>
