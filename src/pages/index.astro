---
// src/pages/index.astro
import { format } from 'date-fns';
import { pl } from 'date-fns/locale/pl';
import NewsScroll from '../components/NewsScroll.astro';
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';
import Events from '../components/Events.astro';

// Pobieranie wydarzeń z Decap CMS
const newsFiles = await Astro.glob('../content/news/*.md');
const news = newsFiles.map(event => {
  return {
    ...event.frontmatter,
    date: new Date(event.frontmatter.date),
    slug: event.file.split('/').pop().split('.').shift()
  }
})
.sort((a, b) => b.date - a.date)
.slice(0, 20);

const eventFiles = await Astro.glob('../content/events/*.md');
const events = eventFiles.map(event => {
  return {
    ...event.frontmatter,
    startDate: new Date(event.frontmatter.start_date),
    slug: event.file.split('/').pop().split('.').shift()
  }
})
// .filter(event => event.startDate >= new Date())
.sort((a, b) => b.startDate - a.startDate);
// .slice(0, 10);

// Konfiguracja Tailwind
const tailwindConfig = {
  theme: {
    extend: {
      colors: {
        primary: {
          50: '#f0f9ff',
          100: '#e0f2fe',
          200: '#bae6fd',
          300: '#7dd3fc',
          400: '#38bdf8',
          500: '#0ea5e9',
          600: '#0284c7',
          700: '#0369a1',
          800: '#075985',
          900: '#0c4a6e',
        },
        secondary: {
          50: '#f5f3ff',
          100: '#ede9fe',
          200: '#ddd6fe',
          300: '#c4b5fd',
          400: '#a78bfa',
          500: '#8b5cf6',
          600: '#7c3aed',
          700: '#6d28d9',
          800: '#5b21b6',
          900: '#4c1d95',
        },
        dark: {
          900: '#0f172a',
          800: '#1e293b',
          700: '#334155',
        }
      },
      fontFamily: {
        'sans': ['Inter', 'sans-serif'],
        'heading': ['Poppins', 'sans-serif'],
      },
      animation: {
        'fade-in': 'fadeIn 0.5s ease-in-out',
        'slide-up': 'slideUp 0.4s ease-out',
      },
      keyframes: {
        fadeIn: {
          '0%': { opacity: '0' },
          '100%': { opacity: '1' },
        },
        slideUp: {
          '0%': { transform: 'translateY(20px)', opacity: '0' },
          '100%': { transform: 'translateY(0)', opacity: '1' },
        }
      }
    }
  }
};

// Funkcja pomocnicza do formatowania daty
const formatDate = (date) => {
  console.log('Formatting date:', date);
  return date ? format(date, 'd MMMM yyyy, HH:mm', { locale: pl }) : '';;
};
---

<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wydarzenia | Kalendarz Imprez</title>

  <!-- Tailwind CSS -->
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  <script>
    tailwind.config = JSON.parse(`---${JSON.stringify(tailwindConfig.theme)}---`);
  </script>

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

  <style>
    body {
      background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
      min-height: 100vh;
      color: #e2e8f0;
    }

    .glass-card {
      background: rgba(15, 23, 42, 0.7);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 16px;
      overflow: hidden;
    }

    .event-card {
      transition: all 0.3s ease;
      transform-origin: center;
    }

    .event-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.25), 0 10px 10px -5px rgba(0, 0, 0, 0.1);
    }

    .date-badge {
      transition: all 0.3s ease;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .date-badge:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
    }

    .gradient-bg {
      background: linear-gradient(135deg, #7c3aed 0%, #0ea5e9 100%);
    }

    .map-container {
      height: 300px;
      border-radius: 12px;
      overflow: hidden;
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .map-container iframe {
      width: 100%;
      height: 100%;
      border: 0;
    }

    .text-gradient {
        background: linear-gradient(90deg, #ff3e82 0%, #8e44ad 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
  </style>
</head>
<body class="font-sans antialiased">
  <!-- Header -->
  <Nav />

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-12">

    <section class="glass-card animate-fade-in p-6 text-white py-10 rounded-xl">
      <div class="container mx-auto px-4 flex flex-col md:flex-row items-center">
          <div class="w-full md:mb-0 text-center">
              <h2 class="text-4xl md:text-5xl font-bold mb-4">Najświeższe <span class="text-gradient">wydarzenia muzyczne</span></h2>
              <p class="text-lg text-gray-300">Bądź na bieżąco z koncertami, festiwalami i premierami w polskiej scenie rapowej.</p>
          </div>
      </div>
    </section>

    <NewsScroll title="Uliczne aktualności" description="Co słychać w holenderskim świecie hip-hopu" news={news.filter(({category}) => category !== 'interview')} />
    <NewsScroll title="Wywiady z artystami" description="Poznaj bliżej twórców polskiej sceny hip-hopowej w Holandii" news={news.filter(({category}) => category === 'interview')} />
    <Events events={events} />
  </main>

  <Footer />

  <script>
    // Animacje przycisków
    document.querySelectorAll('a, button').forEach(btn => {
      btn.addEventListener('mousedown', () => {
        btn.style.transform = 'scale(0.98)';
      });

      btn.addEventListener('mouseup', () => {
        btn.style.transform = '';
      });

      btn.addEventListener('mouseleave', () => {
        btn.style.transform = '';
      });
    });
  </script>
</body>
</html>
