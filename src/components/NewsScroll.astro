---
import EventCard from '../components/EventCard.astro';
const { news, title, description, showAllUrl } = Astro.props;
---

<section class="py-6 bg-underground street-border">
  <div class="container mx-auto">
    <div class="flex justify-between items-center mb-8">
      <div>
        <h2 class="text-3xl font-heading font-bold text-white">{title}</h2>
        <p class="text-blue-300 text-md mt-2">{description}</p>
      </div>
      {showAllUrl && (
        <div class="flex items-center space-x-4">
          <a href={showAllUrl} class="text-primary font-medium flex items-center hover:text-red-500">
            Zobacz wszystkie <i class="fas fa-arrow-right ml-2"></i>
          </a>
        </div>
      )}
    </div>

    <div class="news-scroll-container flex overflow-x-auto pb-6 space-x-4 custom-scrollbar">
      {news.map(item => (
        <div style="width: 250px;">
          <EventCard item={item.frontmatter} />
        </div>
      ))}
    </div>
  </div>
</section>

<style>
.custom-scrollbar::-webkit-scrollbar {
  height: 12px;
}
.custom-scrollbar::-webkit-scrollbar-thumb {
  background: linear-gradient(90deg, #8b5cf6 0%, #7c3aed 100%);
  border-radius: 6px;
}
.custom-scrollbar::-webkit-scrollbar-track {
  background: #23272f;
  border-radius: 6px;
}
.custom-scrollbar {
  scrollbar-color: #8b5cf6 #23272f;
  scrollbar-width: thin;
}
</style>
