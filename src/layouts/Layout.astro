---
// src/layouts/Layout.astro
import '../styles/global.css';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary: #3B82F6;
      --secondary: #1E40AF;
      --accent: #10B981;
    }
  </style>
</head>
<body class="bg-gray-50">
  <!-- Header -->
  <header class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-8">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="mb-6 md:mb-0">
          <h1 class="text-4xl font-bold">Future Events</h1>
          <p class="mt-2 text-blue-100">Discover upcoming events in your area</p>
        </div>
        <div class="flex space-x-4">
          <a href="/admin/" class="bg-white text-blue-600 hover:bg-gray-100 px-6 py-2 rounded-full font-semibold transition duration-300">
            <i class="fas fa-edit mr-2"></i>Manage Events
          </a>
        </div>
      </div>
    </div>
  </header>

  <main>
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white py-12 mt-12">
    <div class="container mx-auto px-4">
      <div class="text-center text-gray-400">
        <p>&copy; {new Date().getFullYear()} Event Horizon. All rights reserved.</p>
      </div>
    </div>
  </footer>
  <script src="https://unpkg.com/decap-cms@^3.1.2/dist/decap-cms.js"></script>
</body>
</html>
